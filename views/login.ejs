<%- include('partials/header', { title: 'Login' }) %>

<div class="card shadow-sm p-4" style="max-width: 400px; width: 100%; margin: auto; margin-top: 3rem;">
  <h2 class="mb-4 text-center text-success fw-bold">Login</h2>

  <% if (messages.error) { %>
    <div class="alert alert-danger">
      <% messages.error.forEach(function(msg) { %>
        <p class="mb-0"><%= msg %></p>
      <% }) %>
    </div>
  <% } %>

  <% if (messages.success) { %>
    <div class="alert alert-success">
      <% messages.success.forEach(function(msg) { %>
        <p class="mb-0"><%= msg %></p>
      <% }) %>
    </div>
  <% } %>

  <form action="/login" method="POST">
    <div class="mb-3">
      <label for="username" class="form-label">Username</label>
      <input
        type="text"
        class="form-control"
        id="username"
        name="username"
        placeholder="Enter username"
        required
      />
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input
        type="password"
        class="form-control"
        id="password"
        name="password"
        placeholder="Enter password"
        required
      />
    </div>

    <button type="submit" class="btn btn-success w-100 fw-bold">Login</button>
  </form>

  <div class="mt-3 text-center">
    <small>
      Don't have an account? <a href="/register" class="text-success fw-semibold">Register here</a>
    </small>
  </div>
</div>

<%- include('partials/footer') %>